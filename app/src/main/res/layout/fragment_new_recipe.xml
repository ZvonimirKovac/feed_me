<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="willcodeforfood.tvzmc2.feedme.fragments.FavoritesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/newRecipeScreenImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder_category" />


        <Spinner
            android:id="@+id/categoryChooser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_recipe_fragment_horizontal_margin"
            android:layout_marginTop="@dimen/new_recipe_fragment_horizontal_margin" />

        <RelativeLayout
            android:id="@+id/ingredientsWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_recipe_fragment_horizontal_margin">

            <TextView
                android:id="@+id/newRecipeIngredientsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/new_recipe_fragment_horizontal_margin"
                android:text="Sastojci:"
                android:textSize="@dimen/new_recipe_fragment_text_view_size" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addIngredientsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/new_recipe_fragment_horizontal_margin"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/newRecipeIngredientsHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_recipe_fragment_horizontal_margin"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/instructionsWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_recipe_fragment_horizontal_margin">

            <TextView
                android:id="@+id/newRecipeInstructionsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/new_recipe_fragment_horizontal_margin"
                android:text="Priprema:"
                android:textSize="@dimen/new_recipe_fragment_text_view_size" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addInsturctionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/new_recipe_fragment_horizontal_margin"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/newRecipeInstructionsHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    </LinearLayout>


</ScrollView>
